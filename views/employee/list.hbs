
<h3 style="color:#232323; font-weight:600; text-align: center;">Employee List  <a href="/employee" class="btn btn-secondary">Add Employee  <i class="fas fa-list fa-lg"></i></a></h3>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>email</th>
            <th>number</th>
            <th>City</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {{#each list}}
            <tr>    
                <td>{{this.fullname}}</td>
                <td>{{this.email}}</td>
                <td>{{this.mobile}}</td>
                <td>{{this.Designation}}</td>
                <td>
                    <a href="/employee/{{this._id}}">
                        <i class="fas fa-edit fa-lg" aria-hidden="true"></i>
                    </a>
                    <a href="/employee/delete{{this._id}}" onclick="return confirm("Are you want to delete"); ">
                        <i class="fas fa-trash fa-lg" aria-hidden="true"></i>
                    </a>
                </td>
            </tr>
        {{/each}}
    </tbody>
</table>